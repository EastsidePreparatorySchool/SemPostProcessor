<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.stage.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="SEMPostProcessor.GalleryLayoutController">
    <fx:define>
        <Screen fx:factory="getPrimary" fx:id="screen"/>
    </fx:define>
    <center>
        <ScrollPane hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" fitToWidth="true">
            <TilePane fx:id="tile_pane" hgap="10" vgap="10">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>
            </TilePane>
        </ScrollPane>
    </center>
    <bottom>
        <HBox fx:id="image_details" prefHeight="${screen.visualBounds.height*1/3}"/>
    </bottom>
</BorderPane>
